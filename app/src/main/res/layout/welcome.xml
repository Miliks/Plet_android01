<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >



    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/myTitle"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:text="Welcome to PLET"
        android:textColor="@android:color/holo_blue_dark" />

    <ImageView
        android:layout_width="370dp"
        android:layout_height="151dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo1"
        tools:ignore="ContentDescription" />


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/selectToy"
        android:layout_width="311dp"
        android:layout_height="33dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="Select a Toy"
        android:textSize="25dp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:id="@+id/spinnerProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@android:drawable/btn_dropdown" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/selectActivity"
        android:layout_width="311dp"
        android:layout_height="33dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:text="Select an Activity"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        />

    <Spinner
        android:id="@+id/spinnerActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@android:drawable/btn_dropdown"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:onClick="navigateStat"
            android:text="Go to statistic" />

        <Button
            android:id="@+id/btnNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Register New Toy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/start_logging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:onClick="startLogging"
            android:text="Collect Data" />
        <Button
            android:id="@+id/backToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:onClick="navigateLogin"
            android:text="back to login" />

        <Button
            android:id="@+id/quit_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:onClick="quitApp"
            android:text="Quit app" />

    </LinearLayout>


</LinearLayout>