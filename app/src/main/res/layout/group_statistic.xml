<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="322dp"
        android:layout_height="83dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logo1"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/sessions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Group play data  "
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="25dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/title2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:gravity="center_horizontal"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20dp" />
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:text="  today was "
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20dp" />
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/title_week2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="  this week was "
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20dp" />
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/title2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:background="@drawable/button_rounded_corners"
            android:onClick="refresh"
            android:layout_marginRight="10dp"
            android:text="   Daily data   " />

        <Button
            android:id="@+id/changeToMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_rounded_corners"
            android:onClick="weekView"
            android:text="   View by week   " />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/single_emoji_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">
     <!--ImageView
         android:id="@+id/emoji"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:src="@drawable/smile"
         android:layout_gravity="center"
         android:layout_marginTop="30dp"/-->
        <ImageView
            android:id="@+id/emoji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/smile"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/weekly_emoji_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/weekly_emoji_table"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:shrinkColumns="*"
            android:background="#FFF">
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#FFF"
                >
            <TextView
                android:id="@+id/textView1a"
                android:background="#FFF"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Mon"
                android:textColor="#00F"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp">
            </TextView>
                <TextView
                    android:id="@+id/textView1b"
                    android:background="#FFF"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Tue"
                    android:textColor="#00F"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp">
                </TextView>
                <TextView
                    android:id="@+id/textView1c"
                    android:background="#FFF"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Wed"
                    android:textColor="#00F"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp">
                </TextView>
                <TextView
                android:id="@+id/textView1d"
                android:background="#FFF"
                android:layout_width="fill_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Thu"
                android:textColor="#00F"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp">
            </TextView>
                <TextView
                    android:id="@+id/textView1e"
                    android:background="#FFF"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Fri"
                    android:textColor="#00F"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="1dp">
                </TextView>

            </TableRow>
            <TableRow
                android:id="@+id/tableRow2"
              android:layout_width="match_parent"
                android:gravity="center"
                android:background="#FFF" >
                <ImageView
                 android:id="@+id/emoji_img1"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:src="@drawable/very_happy"
                 android:layout_gravity="center"
               />
                <ImageView
                    android:id="@+id/emoji_img2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/smile"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:id="@+id/emoji_img3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/indifferent"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:id="@+id/emoji_img4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/smile"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:id="@+id/emoji_img5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/sad"
                    android:layout_gravity="center"
                    />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>




